{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": ["**/*.js", "**/*.mjs", "**/*.cjs"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "double"
    }
  },
  "files": {
    "includes": [
      "**",
      "!!dist",
      "!!.parcel-cache",
      "!!node_modules",
      "!!src/scripts/_customElementsPolyfill.js"
    ],
    "ignoreUnknown": true
  }
}
